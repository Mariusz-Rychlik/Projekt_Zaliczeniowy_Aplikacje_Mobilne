<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pz38tA"
    android:background="#161617">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to
            Pz.38(t) A"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="#232324"
            android:textColor="#dee2e6"
            android:textSize="40sp"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/pz_38_t_a"
            app:srcCompat="@drawable/pz_38_t_a_closeup"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232324"
            android:textColor="#dee2e6"
            android:textSize="30sp"
            android:text="@string/general_information"
            android:textStyle="bold"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232324"
            android:textColor="#dee2e6"
            android:textSize="20sp"
            android:text="info is here" />
    </LinearLayout>

</ScrollView>